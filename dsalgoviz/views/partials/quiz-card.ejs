<div style="padding-top: 40px">
  <div class="card">
    <p class="card-text" style="padding-top: 10px; font-weight: 600"></p>

    <p>
      <span
        style="
          color: white;
          font-size: 28px;
          background-color: #47b3d4;
          padding: 5px;
          width: 40px;
          height: 40px;
          border-radius: 100%;
          display: flex;
          justify-content: center;
          align-items: center;
        "
        ><%=quiz.index + 1%></span
      >&nbsp;&nbsp;&nbsp;&nbsp;<%=quiz.question %>
    </p>

    <div class="op">
      <% for( let i = 0; i < quiz.answers.length; i++ ) { %>

      <div class="form-check">
        <input
          class="form-check-input"
          type="radio"
          value="<%= quiz.answers[i] %>"
          name="<%= quiz.id %>"
          id="<%= quiz.id + quiz.answers[i] %>"
        />
        <label class="form-check-label" for="<%= quiz.id + quiz.answers[i] %>">
          <%= quiz.answers[i] %>
        </label>
      </div>

      <% } %>
    </div>
  </div>
</div>
